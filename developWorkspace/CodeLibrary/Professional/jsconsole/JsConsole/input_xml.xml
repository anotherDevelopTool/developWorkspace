<Window 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
        mc:Ignorable="d"
        Title="JsConsole" Height="600" Width="800">
    <Window.Resources>
        <SolidColorBrush x:Key="EditorSelectionBrush"  Color="Blue"/>
     <SolidColorBrush x:Key="EditorSelectionForeground" Color="White"/>
        
    </Window.Resources>
        <DockPanel>
            <avalonEdit:EdiTextEditor Name="Console" 
                       IsReadOnly="False" 
                       ShowLineNumbers="False"
                       SyntaxHighlighting="XML"
                       HorizontalScrollBarVisibility="Auto" 
                       VerticalScrollBarVisibility="Auto">
            </avalonEdit:EdiTextEditor>
        </DockPanel>
</Window>