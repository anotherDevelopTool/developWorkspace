<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:heid="http://schemas.heidesoft.com/components"
             xmlns:local="clr-namespace:DevelopWorkspace.Main.View"
			 xmlns:base="clr-namespace:DevelopWorkspace.Base.Utils;assembly=DevelopWorkspace.Base"
			 xmlns:extoolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:Fluent="clr-namespace:Fluent;assembly=Fluent"
             mc:Ignorable="d">

             <StackPanel x:Name="border">
                <base:SimpleListView x:Name="trvFamilies" Grid.Row="0"  Width="{Binding ElementName=border,Path=ActualWidth}" Height="{Binding ElementName=border,Path=ActualHeight}"  BorderThickness="1" Margin="0"></base:SimpleListView>
             </StackPanel>
    
</UserControl>